@{
    ;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/bootstrap.min (4).css" />
    <link rel="stylesheet" href="/bootstrap.min (4).css" asp-append-version="true" />

</head>


@{
    Layout = null;
}
<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: saddlebrown;
    }

    .h-custom {
        height: calc(100% - 73px);
    }

    .media (max-width: 450px) {
        .h-custom

    {
        height: 100%;
    }

    }</style>
<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="/images/login.png"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-action="Login">
                    <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                        <p class="lead fw-normal mb-0 me-3">Sign in</p>

                    </div>

                    <div class="divider d-flex align-items-center my-4">
                    </div>

                    <!-- Email input -->
                    



                    <div class="form-group">
                            <label class="control-label"> User Name</label>
                        <input name="na" class="form-control" placeholder="Enter a valid email address" />
                    </div>
                               

                    


                    <div class="form-group">
                        <label for="pa" class="control-label">Password</label>
                        <input name="pa" type="password" class="form-control" placeholder="Enter password" /> <br />
                    </div>
                    <!-- Password input -->


                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->


                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <input type="submit" value="Login" class="btn btn-primary" />
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a asp-action="Create">Register</a>
                        </p>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>

</section>
 