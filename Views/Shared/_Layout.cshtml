<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReaderClub</title>
    <link rel="stylesheet" href="/bootstrap.min.css" />
    <style>
        body {
            background-color: #FFF5E1; /* Coffee background */
            font-family: 'Arial', sans-serif;
        }

        .navbar {
            background-color: #6F4E37; /* Coffee color for navbar */
        }

        .navbar-brand, .nav-link, .site-logo a {
            color: #FFF5E1 !important; /* Light color for text in navbar */
        }

        .site-logo a {
            font-size: 30px;
            font-weight: bold;
        }

        .navbar-toggler {
            border-color: #FFF5E1;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3E%3Cpath stroke='rgba%2877, 53, 33, 0.7%29' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }

        .nav-item {
            margin: 0 5px;
        }

        .btn-nav {
            background-color: #D2B48C; /* Tan color for buttons */
            border: none;
            color: #6F4E37; /* Coffee color for button text */
            padding: 8px 15px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

            .btn-nav:hover {
                background-color: #A0522D; /* Darker brown for hover effect */
                color: #FFF;
            }

        .footer {
            background-color: #6F4E37; /* Coffee color for footer */
            color: #FFF5E1;
            padding: 10px 0;
        }

            .footer a {
                color: #D2B48C;
                text-decoration: none;
            }

                .footer a:hover {
                    color: #FFF5E1;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid">
                <div class="site-logo">
                    <a>ReaderClub</a>
                    <a class="navbar-brand" href="#">Store</a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn-nav" asp-area="" asp-controller="Books" asp-action="Create">Add New Book</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn-nav" asp-area="" asp-controller="Books" asp-action="Index">Manage Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn-nav" asp-area="" asp-controller="orders" asp-action="customerreport">Order Reports</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn-nav" asp-area="" asp-controller="usersaccounts" asp-action="Index">Users List</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn-nav" asp-area="" asp-controller="usersaccounts" asp-action="AddAdmin">Add Admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn-nav" asp-area="" asp-controller="Home" asp-action="Privacy">Contact Us</a>
                        </li>

                        <li class="nav-item">
                            <a class="btn-nav" asp-area="" asp-controller="usersaccounts" asp-action="Logout" >Log-Out</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - ReaderClub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Contact Us</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

