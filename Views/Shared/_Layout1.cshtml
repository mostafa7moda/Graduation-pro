<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReaderClub</title>
    <link rel="stylesheet" href="/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />

    <style>
        body {
            background-color: #6F4E37; /* Brown background */
            font-family: 'Arial', sans-serif;
        }

        .navbar {
            background-color: #FFF5E1; /* Coffee color for navbar */
        }

            .navbar .navbar-brand,
            .navbar .nav-link {
                color: #6F4E37; /* Brown color for text */
            }

                .navbar .nav-link:hover,
                .navbar .navbar-brand:hover {
                    color: #A0522D; /* Darker coffee color for hover */
                }

        .site-logo a {
            color: #6F4E37; /* Brown color for site logo */
        }

            .site-logo a:hover {
                color: #A0522D; /* Darker coffee color for hover */
            }

        .navbar-toggler {
            background-color: #A0522D; /* Darker coffee color for toggler */
        }

        .navbar-collapse {
            justify-content: space-between;
        }

        .btn-custom {
            background-color: #D2B48C; /* Lighter coffee color for buttons */
            border: none;
            color: #6F4E37; /* Brown color for text */
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #FFF5E1; /* Coffee color for hover */
                color: #6F4E37;
            }

        .btn-cart {
            background-color: #6F4E37; /* Brown color for cart button */
            border: none;
            color: #FFF5E1; /* Coffee color for text */
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 14px;
            font-weight:bold;
            transition: background-color 0.3s ease;
        }

            .btn-cart:hover {
                background-color: #A0522D; /* Darker coffee color for hover */
                color: #FFF5E1;
            }

        .footer {
            background-color: #FFF5E1; /* Coffee color for footer */
            color: #6F4E37; /* Brown color for text */
        }

            .footer a {
                color: #6F4E37; /* Brown color for links */
            }

                .footer a:hover {
                    color: #A0522D; /* Darker coffee color for hover */
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container-fluid">
                <div class="site-logo">
                    <a href="catalogue" style="padding-left: 0; font-size: 30px; font-weight: bold;">ReaderClub</a>
                    <a href="#" class="navbar-brand" style="padding-left: 0; font-size: 30px; padding-right: 50px; font-weight: bold;">ٍStore</a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1">


                       


                        <li class="nav-item">
                            <a class="btn btn-custom" asp-area="" asp-controller="Books" asp-action="catalogue">All_Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-custom" asp-area="" asp-controller="orders" asp-action="myorders">My_Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-custom" asp-area="" asp-controller="usersaccounts" asp-action="Edit">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-custom" asp-area="" asp-controller="Home" asp-action="Privacy">Contact_Us</a>
                        </li>
                        <li class="nav-item">
                        <div class="search-bar">
                            <form asp-action="Search" method="get">
                                <div class="input-group" style="margin-left:150px">
                                    <input type="text" class="form-control" placeholder="Search for books" name="search" aria-label="Search for books">
                                    <div class="input-group-append">
                                            <button class="btn btn-outline-dark" style="margin-left:5px" type="submit"><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        </li>



                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-cart" asp-area="" asp-controller="orders" asp-action="Cart">
                                Carty <img src="~/images/shopping-cart2.png" alt="Cart" style="vertical-align: auto; height: 30px;">
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-custom" asp-area="" asp-controller="usersaccounts" asp-action="Logout">Log-Out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - Reader_Club - <a asp-area="" asp-controller="Home" asp-action="Privacy">Contact Us</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>




