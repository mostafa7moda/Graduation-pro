@model IEnumerable<WebApplication5.Models.book>

@{
    ViewData["Title"] = "Catalogue";
}
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Catalogue - E_Library</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap CSS-->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <!-- FontAwesome CSS-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #eee;
            color: #4b3832;
            font-family: 'Lora', serif;
        }

        .hero-section {
            background: linear-gradient(to right, #2F4F4F, #e3d6d1);
            padding: 60px 0;
            color: #3c2f2f;
            text-align: center;
        }

        .hero-section .headline {
            font-size: 3rem;
            font-weight: bold;
        }

        .hero-section .subheadline {
            font-size: 1.4rem;
            margin-top: 7px;
        }

        .card {
            border: 1px solid #8B0000;
            border-radius: 12px;
            transition: all 0.3s;
        }

        .card:hover {
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            transform: translateY(-5px);
        }

        .card img {
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
            height: 300px;
            object-fit: cover;
        }

        .card-body {
            background-color: #008080;
            padding: 20px;
        }

        .card-footer {
            background-color: #FFA07A;
            border-bottom-left-radius: 12px;
            border-bottom-right-radius: 12px;
            padding: 20px;
            text-align: center;
        }

        .btn-outline-dark {
            background-color: #008080;
            color: #eee;
            border-color: #4b3832;
        }

        .btn-outline-dark:hover {
            background-color: #4b3832;
                color: #A52A2A;
        }

        .btn-primary {
            background-color: #FFA07A;
            border-color: #a47148;
        }

        .btn-primary:hover {
            background-color: #CD5C5C;
            border-color: #8b5e37;
        }

        .no-result {
            color: #000;
            text-align: center;
        }


        .card {
            background-color: #5F9EA0;
        }


        .mt-3 {
            background-color: #5F9EA0;
            
        }

        .form-group label {
            background-color: #D3D3D3;
            color: #4b3832;
        }

        .form-control {
            background-color: #D3D3D3;
            border: 1px solid #F4A460;
        }

        .container {
            margin-top: 20px;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        media (max-width: 768px) {
            .card img {
                height: auto;
            }
        }
    </style>
</head>
<body>
    <section class="hero-section text-center">
        <div class="container">
            <h1 class="headline">Welcome At [ Reader Club ]</h1>
            <p class="subheadline"> 'Find Your Next Read' </p>
        </div>
    </section>
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                @if (!Model.Any())
                {
                    <h3 class="no-result">OOPS... NO RESULT</h3>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <!-- Product image-->
                                <img class="card-img-top" src="~/images/@item.imgfile" alt="Book image" />
                                <!-- Product details-->
                                <div class="card-body">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder">@item.title</h5>
                                        <!-- Product price-->
                                        <p>@item.price $</p>
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer">
                                    <a class="btn btn-outline-dark mt-auto" asp-controller="orders" asp-action="Create" asp-route-id="@item.Id">Show Details</a>
                                </div>
                                <form  method="post" asp-controller="Orders" asp-action="AddToCart" asp-route-bookId="@item.Id" class="mt-3">
                                    <div class="form-group">
                                        <label for="quantity-@item.Id">Quantity:</label>
                                        <input type="number" class="form-control" id="quantity-@item.Id" name="quantity" min="1" value="1">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                                </form>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>





